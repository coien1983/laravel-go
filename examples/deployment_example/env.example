# Laravel-Go Deployment Example Environment Configuration

# Application Configuration
APP_NAME="Laravel-Go 部署示例"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080
APP_TIMEZONE=Asia/Shanghai

# Deployment Configuration
DEPLOYMENT_ENV=development
DEPLOYMENT_PLATFORM=docker

# Docker Configuration
DOCKER_IMAGE_NAME=laravel-go-app
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=
DOCKER_COMPOSE_FILE=docker-compose.yml

# Kubernetes Configuration
K8S_NAMESPACE=laravel-go
K8S_REPLICAS=3
K8S_CPU_REQUEST=100m
K8S_MEMORY_REQUEST=128Mi
K8S_CPU_LIMIT=500m
K8S_MEMORY_LIMIT=512Mi

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=laravel_go
DB_USERNAME=laravel_go
DB_PASSWORD=password

# Cache Configuration
CACHE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Nginx Configuration
NGINX_ENABLED=true
NGINX_PORT=80
NGINX_SSL_ENABLED=false
NGINX_SSL_PORT=443

# SSL Configuration (Optional)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Backup Configuration (Optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Security Configuration
SECURITY_HEADERS_ENABLED=true
CORS_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Performance Configuration
GZIP_ENABLED=true
GZIP_LEVEL=6
CACHE_ENABLED=true
CACHE_TTL=3600 