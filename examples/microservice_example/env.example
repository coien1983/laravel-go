# Laravel-Go Microservice Example Environment Configuration

# Application Configuration
APP_NAME="Laravel-Go 微服务系统"
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=Asia/Shanghai

# Gateway Configuration
GATEWAY_PORT=8080
GATEWAY_HOST=localhost

# User Service Configuration
USER_SERVICE_PORT=8082
USER_SERVICE_HOST=localhost

# Product Service Configuration
PRODUCT_SERVICE_PORT=8083
PRODUCT_SERVICE_HOST=localhost

# Order Service Configuration
ORDER_SERVICE_PORT=8084
ORDER_SERVICE_HOST=localhost

# Service Registry Configuration
REGISTRY_TYPE=memory

# Consul Configuration (Optional)
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Etcd Configuration (Optional)
ETCD_ENDPOINTS=localhost:2379

# ZooKeeper Configuration (Optional)
ZOOKEEPER_SERVERS=localhost:2181

# Load Balancer Configuration
LOAD_BALANCER_TYPE=round_robin

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_HALF_OPEN_REQUESTS=3

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Logging Configuration
LOG_CHANNEL=single
LOG_LEVEL=debug

# Database Configuration (Optional)
DB_CONNECTION=sqlite
DB_DATABASE=database/microservice.sqlite

# Redis Configuration (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration (Optional)
CACHE_DRIVER=file 